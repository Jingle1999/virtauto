{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "decision_trace_record_v1.schema.json",
  "type": "object",
  "required": ["ts", "trace_version", "decision_id", "actor", "phase", "result"],
  "properties": {
    "ts": { "type": "string" },
    "trace_version": { "type": "string", "const": "v1" },
    "decision_id": { "type": "string", "minLength": 1 },
    "actor": { "type": "string" },
    "phase": {
      "type": "string",
      "enum": ["route", "guardian_precheck", "authority_enforcement", "execute", "guardian_postcheck", "finalize", "blocked"]
    },
    "result": { "type": "string" }
  },
  "additionalProperties": true
}
