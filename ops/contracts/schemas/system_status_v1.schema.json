{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "system_status_v1.schema.json",
  "title": "System Status v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "generated_at",
    "system_state",
    "agents"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string"
    },
    "system_state": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": true,
          "required": [
            "status"
          ],
          "properties": {
            "status": {
              "type": "string"
            }
          }
        }
      ]
    },
    "agents": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": true,
            "required": [
              "state"
            ],
            "properties": {
              "state": {
                "type": "string"
              }
            }
          }
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": [
              "agent",
              "state"
            ],
            "properties": {
              "agent": {
                "type": "string"
              },
              "state": {
                "type": "string"
              }
            }
          }
        }
      ]
    }
  }
}
