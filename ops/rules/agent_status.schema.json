{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Status Schema",
  "type": "object",
  "required": ["status", "last_action", "confidence", "autonomy_level"],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "active",
        "idle",
        "planned",
        "blocked",
        "degraded"
      ]
    },
    "last_action": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "autonomy_level": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    }
  }
}
