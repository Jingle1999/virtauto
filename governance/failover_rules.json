{
  "version": "1.0",
  "scope": "phase_8_resilience",
  "principle": "failover_is_mechanism_not_decision",

  "global_health_thresholds": {
    "ok": 0.95,
    "degraded": 0.8,
    "failed": 0.5
  },

  "failover_rules": [
    {
      "capability": "deploy",
      "trigger": {
        "agent_health_below": 0.8,
        "heartbeat_missing_seconds": 30
      },
      "action": {
        "route_to": "secondary",
        "require_human_approval": false
      }
    },
    {
      "capability": "content",
      "trigger": {
        "agent_health_below": 0.8,
        "heartbeat_missing_seconds": 60
      },
      "action": {
        "route_to": "secondary",
        "require_human_approval": false
      }
    },
    {
      "capability": "monitoring",
      "trigger": {
        "agent_health_below": 0.7
      },
      "action": {
        "route_to": "secondary",
        "require_human_approval": false
      }
    },
    {
      "capability": "guardian",
      "trigger": {
        "agent_health_below": 0.9
      },
      "action": {
        "route_to": "secondary",
        "require_human_approval": true
      }
    }
  ],

  "trace_requirements": {
    "log_event": true,
    "store_decision_context": true,
    "immutable_trace": true
  }
}
