{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "capability_graph",
  "type": "object",
  "required": ["capabilities"],
  "additionalProperties": false,
  "properties": {
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "primary"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "primary": { "type": "boolean" },
          "depends_on": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "default": []
          }
        }
      }
    }
  }
}